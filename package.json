{
  "name": "cannoneer",
  "version": "0.0.0-SCRAP",
  "scripts": {
    "start": "nodemon ./bin/all",
    "eslint": "eslint . --ext .js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=test mocha --exit \"src/**/*.spec.unit.js\" --require config",
    "test:integration": "cross-env NODE_ENV=test mocha --exit \"src/**/*.spec.integration.js\" --require config",
    "coverage": "nyc --reporter=html --reporter=lcov npm test",
    "seed": "node bin/seed",
    "create:env-file": "node bin/create-env-file"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "ajv": "^6.5.0",
    "axios": "^0.18.0",
    "bluebird": "^3.5.1",
    "cron": "^1.3.0",
    "debug": "^3.1.0",
    "debuggler": "^1.0.0",
    "dotenv": "^5.0.1",
    "json-schema-filter": "^0.1.5",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^4.0.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.1",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "passport-http-bearer": "^1.0.1",
    "pm2": "^2.10.4",
    "redis": "^2.8.0",
    "split": "^1.0.1",
    "systeminformation": "^3.41.3",
    "uuid": "^3.2.1",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codeclimate-test-reporter": "^0.5.0",
    "cross-env": "^5.1.5",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.4",
    "nyc": "^11.8.0",
    "portfinder": "^1.0.13",
    "supertest": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint",
      "pre-push": "npm run test:unit"
    }
  },
  "engines": {
    "node": ">=7.6.0 < 9"
  }
}
